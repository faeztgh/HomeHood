<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.faez.assignment2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_homehood"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="ir.faez.assignment2.HomeActivity"
            android:label="Home Hood" />

        <activity
            android:name=".ExpensesActivity"
            android:label="@string/expenses"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".NewExpenseActivity"
            android:label="New Expense"
            android:parentActivityName=".ExpensesActivity" />

        <activity android:name=".PaymentsActivity"
            android:label="Payments"
            />
        <activity
            android:name="ir.faez.assignment2.SignupActivity"
            android:label="Sign Up"
            android:parentActivityName="ir.faez.assignment2.MainActivity"
             />

        <activity android:name="ir.faez.assignment2.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>